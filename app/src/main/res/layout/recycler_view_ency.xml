<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/dark_green">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.99"
        app:cardBackgroundColor="@color/semi_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"

            >


            <ImageView
                android:id="@+id/imageItemView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"

                app:srcCompat="@drawable/imagepest" />


            <TextView
                android:id="@+id/labelNamaHama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="Nama Hama:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imageItemView"
                />

            <TextView
                android:id="@+id/textNamaHama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="--"
                android:textSize="16dp"
                tools:text="Rice Leaf Roller"
                android:layout_below="@id/labelNamaHama"
                android:layout_toRightOf="@id/imageItemView"
                android:layout_marginTop="8dp"
                 />

            <TextView
                android:id="@+id/labelNamaIlmiahHama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:layout_marginStart="8dp"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="Nama Ilmiah:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imageItemView"
                android:layout_below="@id/textNamaHama"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:id="@+id/textNamaIlmiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:layout_marginStart="8dp"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="--"
                android:textSize="16dp"
                android:layout_toRightOf="@id/imageItemView"
                android:layout_below="@id/labelNamaIlmiahHama"
                tools:text="Cnalaaa"
                android:layout_marginTop="8dp"
                 />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>